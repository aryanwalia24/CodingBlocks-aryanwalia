#include<stdio.h>
int main(void) {
  int n,g;
  scanf("%d",&n);
  for(int i=n-1,j=1,k=1;i>=0;i--,j++,k=k+2)
  {
    for(int l=0;l<i;l++)
    {
      printf("\t");  
    }
    for(int l=j;l<=k;l++)
    {
      printf("%d\t",l);
    }
    for(int l=k-1;l>=j;l--)
    {
      printf("%d\t",l);
    }
    printf("\n");
    g=k;
  }
  for(int i=1,j=n-1,k=g-2;i<=n-1;i++,j--,k=k-2)
  {
    for(int l=0;l<i;l++)
    {
      printf("\t");  
    }
    for(int l=j;l<=k;l++)
    {
      printf("%d\t",l);
    }
    for(int l=k-1;l>=j;l--)
    {
      printf("%d\t",l);
    }
    printf("\n");
  }
  return 0;
}
