#include <stdio.h>
int main(void)
{
    int n, g;
    scanf("%d", &n);
    for (int i = 1, k = n; i <= n; i++, k--)
    {
        for (int j = n; j >= k; j--)
        {
            printf("%d ", j);
        }
        for (int j = i; j <= ((n * 4) - (3 * i)) + 1; j++)
        {
            printf(" ");
        }
        for (int j = k; j <= n; j++)
        {
            printf("%d ", j);
        }
        printf("\n");
        g = k;
    }
    for (int j = n; j >= 0; j--)
    {
        printf("%d ", j);
    }
    for (int j = 1; j <= n; j++)
    {
        printf("%d ", j);
    }
    printf("\n");
    for (int i = n, k = 1; i >= 1; i--, k++)
    {
        for (int j = n; j >= k; j--)
        {
            printf("%d ", j);
        }
        for (int j = i; j <= ((n * 4) - (3 * i)) + 1; j++)
        {
            printf(" ");
        }
        for (int j = k; j <= n; j++)
        {
            printf("%d ", j);
        }
        printf("\n");
        g = k;
    }
    return 0;
}
