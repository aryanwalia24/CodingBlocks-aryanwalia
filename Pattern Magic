#include <stdio.h>
int main()
{
    int n,n1;

    int i;
    scanf("%d", &n1);
    n=2*n1-1;
    int d = (n / 2);
    for (int i = 0; i < n; i++)
    {
        printf("*");
    }
    printf("\n");
    for (int s = 0; s < (n - 2); s++)
    {
        if (s > d-1)
        {
            i--;
        }
        else
        {
            i = s;
        }
        for (int j = 0; j < (d - i); j++)
        {
            printf("*");
        }
        for (int j = 0; j < 1 + (2 * i); j++)
        {
            printf(" ");
        }
        for (int j = (d - i); j > 0; j--)
        {
            printf("*");
        }
        printf("\n");
    }
    for (int i = 0; i < n; i++)
    {
        printf("*");
    }
    return 0;
}
