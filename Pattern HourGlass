#include <stdio.h>
int main(void)
{

    int n;
    scanf("%d", &n);
    for (int i = 1; i <= n + 1; i++)
    {
        for (int j = 1; j < i; j++)
        {
            printf("  ");
        }
        for (int k =n ; k >=i-1 ; k--)
        {
            printf("%d ",k-i+1);
        }
        for (int x = 1; x <=n-i+1 ; x++)
        {
            printf("%d ",x);
        }
        
        printf("\n");
        
    }

    for (int i = n; i >0; i--)
    {
        for (int j = 1; j < i; j++)
        {
            printf("  ");
        }
        for (int k =n ; k >=i-1 ; k--)
        {
            printf("%d ",k-i+1);
        }
        for (int x = 1; x <=n-i+1 ; x++)
        {
            printf("%d ",x);
        }
        
        printf("\n");
        
    }
    return 0;
}
