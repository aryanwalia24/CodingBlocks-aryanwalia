#include<stdio.h>

int main(){ 
    int n;

    scanf("%d",&n);
    for (int i = 1; i <= (n+1)/2; i++)
    {
        for (int j = ((n+1)/2)-i; j >=1; j--)
        {
            printf("  ");
        }
        for (int k = 1; k <= i ; k++)
        {
            printf("* ");
        }
        for (int l = 1; l < i ; l++)
        {
            printf("* ");
        }

        printf("\n");
    }
    for (int i = 1; i <= (n-1)/2; i++)
    {
        for (int j = 1; j <=i; j++)
        {
            printf("  ");
        }
        for (int k = ((n-1)/2)-i+1; k >=1 ; k--)
        {
            printf("* ");
        }
        for (int l = ((n-1)/2)-i; l >= 1 ; l--)
        {
            printf("* ");
        }

        printf("\n");
    }
    

    return 0; 
}
