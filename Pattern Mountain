#include <stdio.h>

int main()
{
    int n ;
    scanf("%d",&n);
    for (int i = 1; i <= n; i++)
    {
        for (int j = 1; j <= i; j++)
        {
            printf("%d\t", j);
        }
        for (int k = 2 * n - 2 * i; k > 1; k--)
        {
            printf("\t");
        }

        if (i != n)
        {
            for (int l = i; l >= 1; l--)
            {
                printf("%d\t", l);
            }

        }
        else{
            for (int l = n-1; l >= 1; l--)
            {
                printf("%d\t", l);
            }
        }
        printf("\n");
    }

    return 0;
}
